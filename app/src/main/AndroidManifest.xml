<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="MyEcomApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SylhetJerseyHouse"
        tools:targetApi="31">

        <!-- MainActivity -->
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true">
            <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />
        </activity>

        <!-- SplashScreen -->
        <activity
            android:name=".Activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".Activities.Login"
            android:exported="false" />

        <!-- SignUp -->
        <activity
            android:name=".Activities.SignUp"
            android:exported="false" />

        <!-- ItemView -->
        <activity
            android:name=".Activities.ItemView"
            android:exported="false" />

        <!-- HistoryBooks -->
        <activity
            android:name=".Activities.HistoryBooks"
            android:exported="false" />

        <!-- AnimeBooks -->
        <activity
            android:name=".Activities.AnimeBooks"
            android:exported="false" />

        <!-- ScientificBooks -->
        <activity
            android:name=".Activities.ScientificBooks"
            android:exported="false" />

        <!-- Clearance -->
        <activity
            android:name=".Activities.Clearance"
            android:exported="false" />

        <!-- FictionBooks -->
        <activity
            android:name=".Activities.FictionBooks"
            android:exported="false" />

        <!-- ClassicBooks -->
        <activity
            android:name=".Activities.ClassicBooks"
            android:exported="false" />

        <!-- ReligiousBooks -->
        <activity
            android:name=".Activities.ReligiousBooks"
            android:exported="false" />

        <!-- BestSeller -->
        <activity
            android:name=".Activities.BestSeller"
            android:exported="false" />

        <!-- ArtsActivity -->
        <activity
            android:name=".Activities.ArtsActivity"
            android:exported="false" />

        <!-- ProfileDetailsActivity -->
        <activity
            android:name=".Activities.ProfileDetailsActivity"
            android:exported="false" />

        <!-- UpdateUserActivity -->
        <activity
            android:name=".Activities.UpdateUserActivity"
            android:exported="false" />

        <!-- ResetPasswordActivity -->
        <activity
            android:name=".Activities.ResetPasswordActivity"
            android:exported="false" />

        <!-- DeleteAccountActivity -->
        <activity
            android:name=".Activities.DeleteAccountActivity"
            android:exported="false" />

    </application>

</manifest>