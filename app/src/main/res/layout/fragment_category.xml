<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eshopthis.finds.Fragments.FragmentCategory">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Club Jerseys -->
            <LinearLayout
                android:id="@+id/id_clearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick"> <!-- Ensure your Fragment or Activity handles this method -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" <!-- Adjust the height as needed -->
                    android:scaleType="centerCrop"
                    android:src="@drawable/clearance" <!-- Replace with your actual image -->
                    android:contentDescription="@string/club_jerseys"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/clearance"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Best Sellers -->
            <LinearLayout
                android:id="@+id/id_best_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/best_seller"
                    android:contentDescription="best_sellers"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/best_sellers"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Arts -->
            <LinearLayout
                android:id="@+id/id_arts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/arts_image"
                    android:contentDescription="@string/arts"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/arts"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Classics -->
            <LinearLayout
                android:id="@+id/id_classics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/classics"
                    android:contentDescription="@string/classics"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/classics"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Scientific -->
            <LinearLayout
                android:id="@+id/id_scientific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scientific"
                    android:contentDescription="@string/scientific"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scientific"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Fiction -->
            <LinearLayout
                android:id="@+id/id_fiction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fiction_image"
                    android:contentDescription="@string/fiction"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fiction"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Religion -->
            <LinearLayout
                android:id="@+id/id_religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/religion"
                    android:contentDescription="@string/religion"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/religion"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- History -->
            <LinearLayout
                android:id="@+id/id_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/history"
                    android:contentDescription="@string/history"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/history"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Anime -->
            <LinearLayout
                android:id="@+id/id_anime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/anime"
                    android:contentDescription="@string/anime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/anime"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
