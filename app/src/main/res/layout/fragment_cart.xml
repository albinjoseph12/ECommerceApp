                android:layout_height="match_parent"
                android:background="#33A1D2"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:text="My Cart"
                android:textColor="#121212"
                android:textSize="25sp"
                android:textStyle="bold"
